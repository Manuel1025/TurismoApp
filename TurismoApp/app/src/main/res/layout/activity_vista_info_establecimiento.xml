<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vistaInfoEstablecimiento">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/tvTituloVInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:text="TextView" />

            <ImageView
                android:id="@+id/imageVInfo"
                android:layout_width="match_parent"
                android:layout_height="245dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvLocalizacionVinfo"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:fontFamily="@font/aclonica"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvDescripcionVinfo"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:fontFamily="@font/aclonica"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvValorVinfo"
                    android:layout_width="211dp"
                    android:layout_height="54dp"
                    android:fontFamily="@font/aclonica"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/tvNumeroVinfo"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/aclonica"
                    android:text="TextView" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvEmailVinfo"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:fontFamily="@font/aclonica"
                android:text="TextView" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>