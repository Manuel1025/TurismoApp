<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="-16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnIniciarSesion"
                android:layout_width="165dp"
                android:layout_height="58dp"
                android:layout_gravity="start"
                android:layout_marginTop="42dp"
                android:enabled="true"
                android:fontFamily="@font/aclonica"
                android:text="Login"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passLog" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="336dp"
                android:layout_height="36dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/aclonica"
                android:text="Iniciar sesion"
                android:textAlignment="center"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="257dp"
                android:layout_height="67dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/aclonica"
                android:text="App Turismo"
                android:textAlignment="center"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/passLog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:autofillHints=""
                android:fontFamily="@font/aclonica"
                android:hint="Contraseña"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userEmailLog" />

            <EditText
                android:id="@+id/userEmailLog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:autofillHints=""
                android:fontFamily="@font/aclonica"
                android:hint="Ingrese su email"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvName" />

            <TextView
                android:id="@+id/tvCrearCuenta"
                android:layout_width="154dp"
                android:layout_height="15dp"
                android:layout_marginTop="48dp"
                android:clickable="true"
                android:fontFamily="@font/aclonica"
                android:text="Crear nueva cuenta"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvOlvideContra" />

            <TextView
                android:id="@+id/tvOlvideContra"
                android:layout_width="204dp"
                android:layout_height="21dp"
                android:layout_marginTop="44dp"
                android:clickable="true"
                android:fontFamily="@font/aclonica"
                android:text="Olvide mi contraseña"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnIniciarSesion" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCrearCuenta" />

            <Button
                android:id="@+id/googleButton"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="101dp"
                android:layout_height="41dp"
                android:layout_marginTop="32dp"
                android:background="@color/white"
                android:drawableStart="@mipmap/googleicon"
                android:fontFamily="@font/aclonica"
                android:scrollbarTrackVertical="@color/white"
                android:text="Google"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:visibility="invisible"
                app:iconTint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.802"
                app:layout_constraintStart_toEndOf="@+id/progressBar2"
                app:layout_constraintTop_toBottomOf="@+id/tvCrearCuenta"
                app:shapeAppearance="@style/TextAppearance.AppCompat" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>